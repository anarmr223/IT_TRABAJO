<struts>
    <package name="inicio" namespace="/inicio" extends="struts-default">
        <action name="navInicio">
            <result>/vistas/inicio.html</result>
        </action>
    </package>
    
    <package name="login" namespace="/login" extends="struts-default">
        
        <action name="navLogin">
            <result>/vistas/login.html</result>
        </action>
        
        <action name="loginAction" class="controller.login.loginAction">
            <result name="success">/vistas/inicio.html</result>
            <result name="input">/vistas/login.html</result>
        </action>
        
    </package>
    
</struts>
